<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lars.wherehaveishit.StatisticsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_many_shits_total"/>

    <TextView
        android:id="@+id/etxt_numberoftotalshits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="18dp"
        android:text=" "/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etxt_numberoftotalshits"
        android:layout_marginTop="7dp"
        android:text="@string/most_shits_in_country"/>

    <TextView
        android:id="@+id/etxt_mostshitsincountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/etxt_country_with_most_shits"/>

    <TextView
        android:id="@+id/etxt_country_with_most_shits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etxt_mostshitsincountry"
        android:layout_marginTop="33dp"/>

    <TextView
        android:id="@+id/mailFeedbackToDeveloper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/have_any_feedback"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lars.wherehaveishit.StatisticsActivity">

    <TextView
        android:id="@+id/howmanyshitsintotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:text="@string/how_many_poops_total"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/etxt_numberoftotalshits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/howmanyshitsintotal"
        android:layout_toEndOf="@+id/howmanyshitsintotal"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/avgratingofshits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_below="@id/howmanyshitsintotal"
        android:text="@string/avg_rating_of_poops"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/etxt_ageratingofshits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avgratingofshits"
        android:layout_toEndOf="@+id/avgratingofshits"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/mostshitsincoutry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_below="@id/avgratingofshits"
        android:text="@string/most_shits_in_coutry"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/etxt_mostshitsincountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mostshitsincoutry"
        android:layout_toEndOf="@+id/mostshitsincoutry"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/mailFeedbackToDeveloper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/have_any_feedback"
        android:textSize="@dimen/textSize"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="lars.wherehaveishit.CustomPoopActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/name_of_place"/>

    <EditText
      android:id="@+id/editPoopName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginBottom="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:inputType="text"/>

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/rating_of_place_cleanness"/>

    <RatingBar
      android:id="@+id/editPoopCleanness"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_margin="@dimen/tiny_layout"
      android:layout_gravity="center"
      android:numStars="5"
      android:stepSize="0.5"/>


    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/rating_of_place_privacy"/>

    <RatingBar
      android:id="@+id/editPoopPrivacy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_margin="@dimen/tiny_layout"
      android:layout_gravity="center"
      android:numStars="5"
      android:stepSize="0.5"/>

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/rating_of_place_overall"/>

    <RatingBar
      android:id="@+id/editPoopOverall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_margin="@dimen/tiny_layout"
      android:layout_gravity="center"
      android:numStars="5"
      android:stepSize="0.5"/>

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/add_poop_note"/>

    <EditText
      android:id="@+id/editPoopNote"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginBottom="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:inputType="text"/>


    <TextView
      android:id="@+id/poopDate"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/poop_date"/>

    <TextView
      android:id="@+id/textPoopDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:text="@string/none"/>

    <Button
      android:id="@+id/addDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:background="@color/secondaryLightColor"
      android:text="@string/add_date_btn"/>

    <TextView
      android:id="@+id/poopTime"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/poop_time"/>

    <TextView
      android:id="@+id/textPoopTime"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:text="@string/none"/>

    <Button
      android:id="@+id/addTime"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:background="@color/secondaryLightColor"
      android:text="@string/add_time_btn"/>

    <TextView
      android:id="@+id/location_latitude_static"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/small_layout"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/location_latitude"/>

    <TextView
      android:id="@+id/textPoopLocationLatitude"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:text="@string/none"/>

    <TextView
      android:id="@+id/location_longitude_static"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:text="@string/location_longitude"/>

    <TextView
      android:id="@+id/textPoopLocationLongitude"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:text="@string/none"/>

    <Button
      android:id="@+id/addLocation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="@dimen/small_layout"
      android:layout_marginEnd="@dimen/small_layout"
      android:background="@color/secondaryLightColor"
      android:text="@string/add_loction_btn"/>

  </LinearLayout>
</ScrollView>

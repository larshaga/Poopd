<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="lars.wherehaveishit.AddShitActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMore"
        android:layout_marginTop="@dimen/spacing"
        android:layout_weight="1"
        android:text="@string/name_of_place"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_shitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing"
        android:layout_marginEnd="@dimen/spacingMore"
        android:layout_marginStart="@dimen/spacingMore"
        android:layout_weight="1"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMore"
        android:layout_marginTop="@dimen/spacing"
        android:layout_weight="1"
        android:text="@string/rating_of_place_cleanness"
        android:textStyle="bold"/>

    <RatingBar
        android:id="@+id/ratingBarCleanness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMore"
        android:layout_marginTop="@dimen/spacing"
        android:layout_weight="1"
        android:text="@string/rating_of_place_privacy"
        android:textStyle="bold"/>

    <RatingBar
        android:id="@+id/ratingBarPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="@dimen/spacing"
        android:layout_weight="1"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMore"
        android:layout_marginTop="@dimen/spacing"
        android:layout_weight="1"
        android:text="@string/rating_of_place_overall"
        android:textStyle="bold"/>

    <RatingBar
        android:id="@+id/ratingBarOverall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="@dimen/spacing"
        android:layout_weight="1"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMore"
        android:layout_marginTop="@dimen/spacing"
        android:layout_weight="1"
        android:text="@string/add_poop_note"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_shitNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing"
        android:layout_marginEnd="@dimen/spacingMore"
        android:layout_marginStart="@dimen/spacingMore"
        android:layout_weight="1"
        android:inputType="text"/>


</LinearLayout>
